<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!--뒤로가기 버튼, 그룹 만들기 텍스트 표시 레이아웃-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1">
        <!--뒤로 가기 버튼-->
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/backmain1"
            android:background="@drawable/back"
            android:layout_margin="5dp"/>
        <!--공백 표현-->
        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent" />
        <!--그룹 만들기 텍스트-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/title_tv"
            android:layout_margin="10dp"
            android:text="그룹 만들기"
            android:textSize="25dp"/>
    </LinearLayout>

    <!--그룹을 만들기 위한 스크룰뷰 작성-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="40" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <!--그룹명-->
                <!--그룹 입력하기-->
                <TextView
                    android:layout_width="74dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:text="그룹명"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/Gname_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="그룹명을 입력하시오. (이후에 변경 불가)"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <!--그룹소개-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:textSize="20dp"
                    android:text="그룹소개"/>
                <!--그룹소개 입력하기-->
                <EditText
                    android:id="@+id/Gintro_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="그룹소개를 입력하시오."/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <!--그룹소개-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:textSize="20dp"
                    android:text="카테고리"/>
                <!--카테고리 선택하기-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/Gcate_tv"
                    android:layout_margin="10dp"
                    android:textSize="20dp"
                    android:hint="---"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <!--그룹의 목표 시간-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:textSize="20dp"
                    android:text="목표시간"/>
                <!--그룹의 목표 시간설정 / 모드는 spinner로 설정-->
                <EditText
                    android:id="@+id/goaltime_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="목표시간을 적어주세요.  ex) 3"
                    ></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <!--그룹 p/w 설정-->
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:textSize="20dp"
                    android:text="가입방식"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="나중에..!여유있으면 승인가입인지.."/>
            </LinearLayout>

            <Button
                android:layout_marginTop="5dp"
                android:text="추가하기"
                android:textSize="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addGroup_btn"></Button>
        </LinearLayout>
    </ScrollView>

</LinearLayout>